{
  "name": "chatflow-frontend",
  "version": "1.0.0",
  "description": "ChatFlow Frontend Application",
  "main": "dist/app.js",
  "scripts": {
    "build": "tsc && cp src/*.html src/*.css dist/",
    "build-with-cache-bust": "tsc && cp src/*.html src/*.css dist/ && node scripts/add-cache-bust.js",
    "dev": "tsc --watch",
    "start": "npm run build && python3 -m http.server 3003 --directory dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy": "node scripts/deploy.js",
    "deploy:build-only": "node scripts/deploy.js --build-only"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/test-setup.ts"
    ]
  }
}
