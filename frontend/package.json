{
  "name": "chatflow-frontend",
  "version": "1.0.1",
  "description": "ChatFlow Frontend Application",
  "main": "dist/app.js",
  "scripts": {
    "build": "vite build",
    "build-legacy": "tsc && cp *.html *.css dist/ 2>/dev/null || true",
    "build-with-cache-bust": "npm run build-legacy && node scripts/add-cache-bust.js",
    "dev": "vite",
    "preview": "vite preview",
    "start": "npm run build && python3 -m http.server 3003 --directory dist",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "deploy": "node scripts/deploy.js",
    "deploy:build-only": "node scripts/deploy.js --build-only"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.9",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "js-yaml": "^4.1.0",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "vite": "^6.3.5"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testMatch": [
      "**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/test-setup.ts"
    ]
  },
  "dependencies": {
    "scrypt-js": "^3.0.1"
  }
}
